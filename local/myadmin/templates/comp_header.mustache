<div class="myadmin_settings_link container-fluid">
    <div class="row myadmin_nav_row_h">
        <div class="col-3">
            <span class="hamburger_container">
                <button class="hamburger hamburger--spin" type="button">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </span>
            <div class="myadmin_db_title">Dashboard</div>
        </div>

        <div class="col-6">
            <div class="myadmin_title_header text-center align-middle">{{myadmin_title}}</div>
        </div>

        <div class="col-3">
            <a class="myadmin_settings_icon nav-link float-right align-middle" href="{{settings_link}}/admin/settings.php?section=local_myadmin">
                <i class="fa fa-cog myadmin_icon_size_2"></i>
            </a>
        </div>
    </div>

</div>

{{#js}}
require(['jquery'], function($) {
    $('.hamburger').click(function(ev) {
        ev.preventDefault();
        $(this).toggleClass("is-active");
        {{! $('.myadmin_main_container').toggleClass("closed-sidebar"); }}
        $('#myadmin_app').toggleClass("closed-sidebar");
    });
});
{{/js}}