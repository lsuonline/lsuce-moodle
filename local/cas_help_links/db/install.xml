<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/cas_help_links/db" VERSION="20161208" COMMENT="XMLDB file for Moodle local/cas_help_links"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_cas_help_links" COMMENT="This table stores CAS Help links by creator type which include user, course and category.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="type" TYPE="char" LENGTH="11" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="category_id" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false" DEFAULT="0"/>
        <FIELD NAME="course_id" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false" DEFAULT="0"/>
        <FIELD NAME="user_id" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false" DEFAULT="0"/>
        <FIELD NAME="display" TYPE="int" LENGTH="1" NOTNULL="true" SEQUENCE="false" DEFAULT="1"/>
        <FIELD NAME="link" TYPE="char" LENGTH="512" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="dept" TYPE="char" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="number" TYPE="char" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="user_id_key" TYPE="foreign" FIELDS="user_id" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="course_id_key" TYPE="foreign" FIELDS="course_id" REFTABLE="course" REFFIELDS="id"/>
        <KEY NAME="category_id_key" TYPE="foreign" FIELDS="category_id" REFTABLE="course_categories" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="local_cas_help_links_log" COMMENT="This table stores CAS Help link logs generated by user clicks.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="link_type" TYPE="char" LENGTH="11" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="link_url" TYPE="char" LENGTH="512" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="user_id" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_dept" TYPE="char" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_number" TYPE="char" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="time_clicked" TYPE="int" LENGTH="12" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_id" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="user_id_key" TYPE="foreign" FIELDS="user_id" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="course_id_key" TYPE="foreign" FIELDS="course_id" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
