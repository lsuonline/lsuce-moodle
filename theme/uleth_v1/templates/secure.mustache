{{!
    @template theme_uleth_v1/secure

    ULeth secure layout template.

    Context variables required for this template:
    * sitename - The name of the site
    * output - The core renderer for the page

      Example context (json):
    {
        "sitename": "Moodle",
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Test page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headings make html validators happier</h1>"
         }
    }
}}
{{> theme_uleth_v1/head }}

<body {{{ bodyattributes }}}>
{{> core/local/toast/wrapper}}

<div id="page-wrapper">

    {{{ output.standard_top_of_body_html }}}

    {{>theme_uleth_v1/navbar-secure}}

    <div id="page" class="container-fluid">
        {{! Secured full header }}

        <div id="page-header" class="row uleth_secure_header">
            <div class="col-12 py-3">
                <div class="page-context-header">
                    <div class="page-header-headings">
                        {{{ output.page_heading }}}
                    </div>
                </div>
            </div>
        </div>

        <div id="page-content" class="row">
            <div id="region-main-left-aside" class="col-12 col-lg-12 col-xl-3">
                {{#hasblocks}}
                <section class="uleth_secure_pre_block_section" data-region="blocks-column">
                    {{{ sidepreblocks }}}
                </section>
                {{/hasblocks}}
            </div>
            <div id="region-main-right-main" class="col-12 col-lg-12 col-xl-9">
                <section id="region-main" {{#hasblocks}}class="uleth_secure_main_section has-blocks"{{/hasblocks}}>
                    <div class="card card-block">
                    {{{ output.course_content_header }}}
                    {{{ output.main_content }}}
                    {{{ output.course_content_footer }}}
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
<footer id="page-footer" class="py-3 bg-dark text-light">
    <div class="container">
        <div id="course-footer">{{{ output.course_footer }}}</div>

        {{{ output.standard_end_of_body_html }}}
    </div>
</footer>

    <script>
        console.log("This page is secure YO");
    </script>
</body>
</html>
{{#js}}
M.util.js_pending('theme_uleth_v1/loader');
require(['theme_uleth_v1/loader'], function() {
  M.util.js_complete('theme_uleth_v1/loader');
});
{{/js}}
