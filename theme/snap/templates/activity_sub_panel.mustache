    @template theme_snap/activity_sub_panel

    Activity dropdown subpanel template

    Example context (json):
    {
        'toggleclass' => 'groups-dropdown',
        'toggleariacontrols' => 'groups-menu',
        'spancontent' => get_string('groups'),
        'dropdownmenuid' => 'groups-menu',
        'dropdownmenuclasses' => 'groups-dropdown-menu',
        'dropdownoptions' => [],
    }
}}

<li><div class='dropdown dropdown-subpanel'>
    <a role='button' class='dropdown-item dropdown-toggle {{toggleclass}}' aria-controls={{toggleariacontrols}}>
        <i class='icon fa {{spanicon}} fa-fw'></i>
        <span class='menu-action-text'>{{spancontent}}</span>
    </a>
    <div id={{dropdownmenuid}} role='menu' class='dropdown-menu dropdown-subpanel-content {{dropdownmenuclasses}}'>
        {{{dropdownoptions}}}
    </div>
</div></li>
