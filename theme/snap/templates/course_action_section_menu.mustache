{{!
    @template theme_snap/course_action_section_menu

    Extra menu for the course action sections
}}
<li class="dropdown extra-actions-menu">
    <a id="extra-actions-dropdown-{{{sectionid}}}" class="snap-extra-actions" tabindex=0 role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" aria-label="{{#str}} extra_section_menu, theme_snap {{/str}}">
        <i class="text-black-50 fa fa-ellipsis-v align-middle" title="Actions for course size s1" aria-hidden="true"></i>
    </a>
    <div class="dropdown-menu" id="drop-down-menu-extra-actions">
        <ul>
            {{#actions}}
                {{> theme_snap/course_action_section }}
            {{/actions}}
        </ul>
    </div>
</li>