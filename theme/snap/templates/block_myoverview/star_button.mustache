{{!
    @template block_myoverview/star_button

    This template renders a star button to set the course as starred.

}}
<div class="star-button">
    <button class="favoriteicon {{#isfavourite}}hidden{{/isfavourite}}"
            data-action="add-favourite" data-course-id="{{id}}"
            title="{{#str}}addtofavourites, block_myoverview{{/str}}"
            aria-label="{{#str}}addtofavourites, block_myoverview{{/str}}">
        <i class="icon add-favourite fa fa-star"></i>
    </button>
    <button class="favoriteicon {{^isfavourite}}hidden{{/isfavourite}}"
            data-action="remove-favourite" data-course-id="{{id}}"
            title="{{#str}}removefromfavourites, block_myoverview{{/str}}"
            aria-label="{{#str}}removefromfavourites, block_myoverview{{/str}}">
        <i class="icon remove-favourite fa fa-star"></i>
    </button>
</div>
