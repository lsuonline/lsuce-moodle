{{!
    @template theme_snap/animated_graphics_pause

    Example context (json):
    {
        "id": "html-id-1",
        "haslogo": true,
        "sitename": "My Site 1"
    }
}}

<div id="{{id}}" class="paused-gif" role="button">
    {{#haslogo}}<span class="snap-logo-anim-pause"></span>{{/haslogo}}
    {{^haslogo}}<span class="snap-sitename-anim-pause">{{sitename}}</span>{{/haslogo}}
    <span class="resume-anim">
        {{resumemessage}}<i class="icon fa fa-fw fa-play-circle"></i>
    </span>
</div>
