{{!
    @template core_course/coursecard

    This template renders the a card for the course cards.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "hasprogress": true,
                "progress": 10,
                "visible": true
            }
        ]
    }
}}
{{! BEGIN LSU Course Card Quick Links.
    *** NOTE *** This is copied from:
    course/templates/coursecard.mustache
    END LSU Course Card Quick Links. }}

<div class="card course-card mx-1" role="listitem"
    data-region="course-content"
    data-course-id="{{{id}}}">
    {{! BEGIN LSU Course Card Quick Links. }}
    <span class="course_quick_link_swap_{{{id}}}"></span>
    {{! END LSU Course Card Quick Links. }}
    <a href="{{viewurl}}" tabindex="-1">
        <div class="card-img-top" style='background-image: url("{{{courseimage}}}");'>
            <span class="sr-only">{{fullname}}</span>
        </div>
    </a>
    <div class="card-body pe-1 course-info-container" id="course-info-container-{{id}}-{{uniqid}}">
        <div class="d-flex align-items-start">
            <div class="w-100 text-truncate">
                {{#showshortname}}
                    <div class="text-muted muted d-flex mb-1 flex-wrap">
                        <span class="sr-only">
                            {{#str}}aria:courseshortname, core_course{{/str}}
                        </span>
                        <div>
                            {{{shortname}}}
                        </div>
                    </div>
                {{/showshortname}}
                <a href="{{viewurl}}" class="aalink coursename me-2 mb-1">
                    {{> core_course/favouriteicon }}
                    <span class="sr-only">
                        {{#str}}aria:coursename, core_course{{/str}}
                    </span>
                    {{$coursename}}{{/coursename}}
                </a>
                <div class="text-muted muted d-flex flex-wrap">
                    {{$coursecategory}}{{/coursecategory}}
                </div>
                {{^visible}}
                    <div class="d-flex flex-wrap">
                        <span class="badge bg-info text-white">{{#str}} hiddenfromstudents {{/str}}</span>
                    </div>
                {{/visible}}
            </div>
        </div>
    </div>
    <div class="d-flex align-items-start">
        {{$progress}}{{/progress}}
        {{$menu}}{{/menu}}
    </div>
</div>

{{! BEGIN LSU Course Card Quick Links. }}
{{#js}}
require(['jquery', 'core/templates'], function($, coretemp) {
    $.ajax({
        type: "GET",
        async: true,
        url: M.cfg.wwwroot + '/theme/snap/rest.php?action=get_course_card_quick_links',
        data: 'courseid={{{id}}}',
        success: function(data) {
            // This will call the function to load and render our template.
            coretemp.renderForPromise('theme_snap/course_card_links', data)

            // It returns a promise that needs to be resoved.
            .then(({html, js}) => {
                // replace the templated html
                var thislink = 'span.course_quick_link_swap_' + data.courseid;
                coretemp.replaceNodeContents(thislink, html, js);
            })

            // Deal with this exception (Using core/notify exception function is recommended).
            .catch(ex => displayException(ex));
        }
    });
});
{{/js}}
{{! END LSU Course Card Quick Links. }}