<div class="'block_course_hider_container'">
    <table class="table table-hover table-striped sample_table">
        {{# show_count}}
        <caption>Number Of Courses: {{course_count}}</caption>
        {{/ show_count}}
        <thead>
            <tr>
                <th>{{# str }} ch_heading_id, block_course_hider {{/ str }}</th>
                <th>{{# str }} ch_heading_fullname, block_course_hider {{/ str }}</th>
                <th>{{# str }} ch_heading_shortname, block_course_hider {{/ str }}</th>
                <th>{{# str }} ch_heading_visible, block_course_hider {{/ str }}</th>
            </tr>
        </thead>
        <tbody>
            {{# courses}}
            <tr data-rowid='{{id}}'>
                <input type="hidden" value="{{id}}" name="sentdata"/>
                <input type="hidden" value="{{some_other_id}}" name="some_other_id"/>
                <td>{{id}}</td>
                <td><a href="{{ch_url}}/course/view.php?id={{id}}" target="_blank">{{fullname}}</a></td>
                <td><a href="{{ch_url}}/course/view.php?id={{id}}" target="_blank">{{shortname}}</a></td>
                <td>{{visible}}</td>
            </tr>
            {{/ courses }}

            {{^ courses }}
                <tr>
                    <td colspan="7" align="center">{{# str }} ch_no_courses, block_course_hider {{/ str }}</td>
                </tr>
            {{/ courses }}

        </tbody>
    </table>
</div>
