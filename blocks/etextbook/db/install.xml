<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/etextbook/db" VERSION="20160802" COMMENT="XMLDB file for Moodle blocks/etextbook"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="block_etextbook" COMMENT="Table of Etextbooks available from the library">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="the moodle id of the course"/>
        <FIELD NAME="term" TYPE="char" LENGTH="25" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="book_url" TYPE="char" LENGTH="1300" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="img_url" TYPE="char" LENGTH="1300" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="title" TYPE="char" LENGTH="1280" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="dept" TYPE="char" LENGTH="9" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_title" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_number" TYPE="int" LENGTH="7" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="section" TYPE="int" LENGTH="3" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="instructor" TYPE="char" LENGTH="256" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
