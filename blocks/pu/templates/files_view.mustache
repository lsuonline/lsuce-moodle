<div class="block_pu_container">
    <table class="table table-hover table-striped pu_files_table">
        <caption>Files in Moodle</caption>
        <thead>
            <tr>
                {{#fileURL}}
                    {{#isSortedAsc}}
                        <th><a href="?sort=url&dir=desc">{{# str }} pu_file_link, block_pu {{/ str }}</a> {{#pix}} t/sort_asc {{/pix}}</th>
                    {{/isSortedAsc}}
                    {{^isSortedAsc}}
                        <th><a href="?sort=url&dir=asc">{{# str }} pu_file_link, block_pu {{/ str }}</a> {{#pix}} t/sort_desc {{/pix}}</th>
                    {{/isSortedAsc}}
                {{/fileURL}}
                {{^fileURL}}
                    <th><a href="?sort=url&dir=asc">{{# str }} pu_file_link, block_pu {{/ str }}</a></th>
                {{/fileURL}}
                {{! -------------------- }}
                {{#pu_filename}}
                    {{#isSortedAsc}}
                        <th><a href="?sort=subject&dir=desc">{{# str }} pu_filename, block_pu {{/ str }}</a> {{#pix}} t/sort_asc {{/pix}}</th>
                    {{/isSortedAsc}}

                    {{^isSortedAsc}}
                        <th><a href="?sort=subject&dir=asc">{{# str }} pu_filename, block_pu {{/ str }}</a> {{#pix}} t/sort_desc {{/pix}}</th>
                    {{/isSortedAsc}}
                {{/pu_filename}}
                {{^pu_filename}}
                    <th><a href="?sort=subject&dir=asc">{{# str }} pu_filename, block_pu {{/ str }}</a></th>
                {{/pu_filename}}
                {{! -------------------- }}
                {{#pu_created}}
                    {{#isSortedAsc}}
                        <th><a href="?sort=sent&dir=desc">{{# str }} pu_filecreated, block_pu {{/ str }}</a> {{#pix}} t/sort_asc {{/pix}}</th>
                    {{/isSortedAsc}}

                    {{^isSortedAsc}}
                        <th><a href="?sort=sent&dir=asc">{{# str }} pu_filecreated, block_pu {{/ str }}</a> {{#pix}} t/sort_desc {{/pix}}</th>
                    {{/isSortedAsc}}
                {{/pu_created}}
                {{^pu_created}}
                    <th><a href="?sort=sent&dir=asc">{{# str }} pu_filecreated, block_pu {{/ str }}</a></th>
                {{/pu_created}}
                {{! -------------------- }}
                {{#pu_modified}}
                    {{#isSortedAsc}}
                        <th><a href="?sort=subject&dir=desc">{{# str }} pu_filemodified, block_pu {{/ str }}</a> {{#pix}} t/sort_asc {{/pix}}</th>
                    {{/isSortedAsc}}

                    {{^isSortedAsc}}
                        <th><a href="?sort=subject&dir=asc">{{# str }} pu_filemodified, block_pu {{/ str }}</a> {{#pix}} t/sort_desc {{/pix}}</th>
                    {{/isSortedAsc}}
                {{/pu_modified}}
                {{^pu_modified}}
                    <th><a href="?sort=subject&dir=asc">{{# str }} pu_filemodified, block_pu {{/ str }}</a></th>
                {{/pu_modified}}
                {{! -------------------- }}
                <th>{{# str }} pu_copy, block_pu {{/ str }}</th>
                <th>{{# str }} pu_delete, block_pu {{/ str }}</th>
                
            </tr>
        </thead>
        <tbody>
            {{#pu_data}}
            <form method="POST" id="pu_file_form_{{puid}}">
                <tr data-rowid='{{puid}}'>
                    <input type="hidden" value="{{puid}}" name="pu_file_id"/>
                    <input type="hidden" value="{{fileid}}" name="mdl_file_id"/>
                    <input type="hidden" value="pu" name="pu_or_nonmood"/>
                    
                    <td>{{pu_fileurl}}</td>
                    <td>{{pu_filename}}</td>
                    <td>{{pu_filecreated}}</td>
                    <td>{{pu_filemodified}}</td>
                    <td><button class="btn btn-primary pu_file_copy"><i class="fa fa-copy"></i></button></td>
                    <td><button type="submit" class="btn btn-danger pu_file_delete"><i class="fa fa-trash"></i></button></td>
                    
                </tr>
            </form>
            {{/pu_data}}
            {{^pu_data}}
                <tr>
                    <td colspan="5" align="center">{{# str }} pu_nofiles, block_pu {{/ str }}</td>
                </tr>
            {{/pu_data}}

        </tbody>
    </table>
    <span class="pull-right">
        <a href="{{pu_url}}/blocks/pu/uploader.php" class="btn btn-info">Add New File</a>
    </span>
    {{> block_pu/non_mood_files}}
    {{> block_pu/buttons }}
    
</div>
