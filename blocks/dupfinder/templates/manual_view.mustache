<div class="block_dupfinder_container">
    <table class="table table-hover table-striped dupfinder_manual_table">
        <thead>
            <tr>
                <th>{{# str }} dfusername, block_dupfinder {{/ str }}</th>
                <th>{{# str }} dfemail, block_dupfinder {{/ str }}</th>
                <th>{{# str }} dffirstname, block_dupfinder {{/ str }}</th>
                <th>{{# str }} dflastname, block_dupfinder {{/ str }}</th>
                <th>{{# str }} dfidnumber, block_dupfinder {{/ str }}</th>
                <th>{{# str }} dfdeptcode, block_dupfinder {{/ str }}</th>
                <th>{{# str }} dfcoursenumber, block_dupfinder {{/ str }}</th>
                <th>{{# str }} dfcoursesection, block_dupfinder {{/ str }}</th>
            </tr>
        </thead>
        <tbody>
            {{# dupes}}
            <tr>
                <td><a href="{{dfurl}}/user/profile.php?id={{id}}" target="_blank">{{mismatch}}</a></td>
                <td>{{email}}</td>
                <td>{{firstname}}</td>
                <td>{{lastname}}</td>
                <td>{{idnumber}}</td>
                <td>{{department}}</td>
                <td>{{number}}</td>
                <td>{{section}}</td>
            </tr>
            
            </form>
            {{/ dupes }}

            {{^ dupes }}
                <tr>
                    <td colspan="9" align="center">{{# str }} clicktorun, block_dupfinder {{/ str }}</td>
                </tr>
            {{/ dupes }}

        </tbody>
    </table>
    {{#isblock}}
        <span class="pull-right">
            <a href="{{dfurl}}/blocks/dupfinder/manual.php?runmanual=1" class="btn btn-info">Search for Duplicates Now</a>
        </span>
    {{/isblock}}
</div>
