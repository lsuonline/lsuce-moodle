{{!
    @template mod_flashcard/decks

    Classes required for JS:
    * no classes
}}
<!-- mod_flashcard/cardstatus -->
<div class="card-status">
    <table width="100%">
        <tr valign="bottom">
            {{#cardset}}
            <td width="30%" align="center">
            {{#notfirst}}
            <td>{{#pix}}a/r_breadcrumb{{/pix}}</td>
            {{/notfirst}}
                {{#hascards}}
                <table>
                    <tr>
                        <td>
                            <div style="padding-bottom: {{height}}px" class="graphdeck" align="top">
                                {{{icon}}}
                            </div>
                        </td>

                        <td>
                            {{#clocks}}
                            {{{latemark}}}
                            {{/clocks}}
                        </td>
                    </tr>
                </table>
                {{/hascards}}
                {{^hascards}}
                <div height="12px" align="top">
                    {{#pix}}topempty, mod_flashcard{{/pix}}
                </div>
                {{/hascards}}

            </td>
            {{/cardset}}
        </tr>
    </table>
</div>

{{{resetbutton}}}
<!-- /mod_flashcard/cardstatus -->
